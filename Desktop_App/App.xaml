<Application x:Class="Desktop_App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Desktop_App"
             xmlns:v="clr-namespace:Desktop_App.MVVM.Views"
             xmlns:vm="clr-namespace:Desktop_App.MVVM.ViewModels">
    
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:HomeViewModel}">
            <v:HomeView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:KnowledgeViewModel}">
            <v:KnowledgeView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:GuideViewModel}">
            <v:GuideView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:LinksViewModel}">
            <v:LinksView />
        </DataTemplate>
    </Application.Resources>
    
</Application>
